<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/theme-style.css" rel="stylesheet" />
    <link href="~/Content/css/hover.css" rel="stylesheet" />
    @RenderSection("css", false)
    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/easing.js"></script>
    <script src="~/Content/js/move-top.js"></script>
    <script type="text/javascript">
        //jQuery(document).ready(function ($) {
        //    $(".scroll").click(function (event) {
        //        event.preventDefault();
        //        $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
        //    });
        //});
        $(function () {
            //控制相应布局菜单显示
            var pull = $('#pull');
            menu = $('nav ul');
            menuHeight = menu.height();
            $(pull).on('click', function (e) {
                e.preventDefault();
                menu.slideToggle();
            });
            $(window).resize(function () {
                var w = $(window).width();
                if (w > 320 && menu.is(':hidden')) {
                    menu.removeAttr('style');
                }
            });
        });
        function ChangeLanguage(lg) {
            document.location.href = "/Home/Index?languge=" + lg;
        }
    </script>
    @RenderSection("scripts", false)

</head>
<body>
    <header class="header" style="">
        <div class="container">
            <div class="logo" style="margin-top:20px;"> <a href="/home/inex"><img src="/Content/images/logo_hc.png" title="" style="height:64px;" /></a> </div>
            <nav class="top-nav">
                <ul class="top-nav">
                    <li class="active"><a href="/Home/Index" class="scroll">@(new QSDMS.WebSite.Web.Controllers.BaseController().GetLanguageName("header1"))</a></li>
                    <li class="page-scroll"><a href="/About/Index" class="scroll">@(new QSDMS.WebSite.Web.Controllers.BaseController().GetLanguageName("header2"))</a></li>
                    <li class="page-scroll"><a href="/ServiceResource/Index" class="scroll">@(new QSDMS.WebSite.Web.Controllers.BaseController().GetLanguageName("header3"))</a></li>
                    <li class="page-scroll"><a href="/HealthService/Index" class="scroll">@(new QSDMS.WebSite.Web.Controllers.BaseController().GetLanguageName("header4"))</a></li>
                    <li class="page-scroll"><a href="/News/Index" class="scroll">@(new QSDMS.WebSite.Web.Controllers.BaseController().GetLanguageName("header5"))</a></li>
                    <li class="page-scroll"><a href="/Contact/Index" class="scroll">@(new QSDMS.WebSite.Web.Controllers.BaseController().GetLanguageName("header6"))</a></li>
                </ul>
                <a href="#" id="pull"><img src="/Content/images/nav-icon.png" title="menu" /></a>
                <a onclick="ChangeLanguage('cn')">中文</a>
                <a onclick="ChangeLanguage('en')">english</a>
            </nav>
            <div class="clearfix"> </div>
        </div>
    </header>
    <div class="body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>
</body>
</html>
